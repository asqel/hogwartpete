def a(x):
    a=""
    for i in x:
        d=bin(ord(i))[2:]
        for k in range(8-len(d)):
            d="0"+d
        a+=d
    return a



def bin_to_text(x):
    b=[]
    for i in range(len(x)):
        if not i%8:
            b.append("")
        b[-1]+=x[i]
    return "".join([chr(int(i,2)) for i in b])
    
print(bin_to_text(a("salut")))
